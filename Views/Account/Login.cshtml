@model Proyecto_AirBnb.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutRegistro.cshtml";
    //Layout = null;
}

<h2>Login</h2>

@if (ViewBag.ErrorUsuario != null)
{
    <h1>@ViewBag.ErrorUsuario</h1>
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2", @id = "emailInput" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control decorative-input", @maxlength = 40 } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control decorative-input", @maxlength = 40 } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Entrar" class="btn btn-primary" />
            </div>
        </div>
        @Html.ActionLink("¿Has olvidado tu contraseña?", "ForgotPass", "Account", new { @class = "col-md-offset-2 col-md-10" })
    </div>
}
@section scripts
{
    <script>

        $("#emailInput").focus();
    </script>
}
