@model IEnumerable<Proyecto_AirBnb.Models.Anuncio>

<h3>Mis reservas</h3>
@if (Model.Count() == 0)
{
    <div class="panel panel-default">
        <h2>No tienes reservas aun</h2>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                Foto
            </th>
            <th>
                Titulo
            </th>
            <th>
                Descripcion
            </th>
            <th>
                Capacidad
            </th>
            <th>
                Localidad    
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Content/Imagenes/Anuncios/@item.Foto" style="width:70px;height:90px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Localidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td></td>
        <td>
            @Html.ActionLink("Detalles", "DetalleAnuncio", "Anuncios", new { id=item.Id_Anuncio }, null)
        </td>
    </tr>
}

    </table>
}
