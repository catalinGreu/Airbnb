        $(".link").click(function () { //--> como vamos siempre al mismo lado....solo cambia id
            //los anchor de la class='link'
            var id = $(this).attr("id");
            var json = { "index": id };

            $.ajax({

                url: "@Url.Action("Listar", "Perfil")",
                type: 'POST',
                contentType: 'application/json',
                dataType: 'html',
                data: JSON.stringify(json),

